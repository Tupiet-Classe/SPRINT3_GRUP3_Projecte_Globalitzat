MDScreen:
    MDTopAppBar:
        title: "PymeShield"
        elevation: 4
        pos_hint: {"top": 1}
        md_bg_color: "#ff6720"
        specific_text_color: "black"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["account",("open")]]

    
    
    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "Inicio"
                MDLabel:
                    text:"Splash Screen"
                    halign: "center"
                Image:
                    source: 'Images/inicio.png'
            MDScreen:
                name: "Cursos"
                MDBoxLayout:
                    padding:0, 70, 0, 0
                    MDScrollView:
                        MDList:
                            id: cursos  
                             
            MDScreen:
                name: "Emblemas"
                MDBoxLayout:
                    padding:0, 70, 0, 0
                    MDScrollView:
                        MDList:
                            id: emblemas
                            
            MDScreen:
                name: "Calificaciones"
                MDBoxLayout:
                    padding:0, 70, 0, 0
                    MDScrollView:
                        MDList:
                            id: calificaciones
               

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical' 
                ContentNavigationDrawer:
                    manager: screen_manager
                    nav_drawer: nav_drawer
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Pymeralia"
            source: "Images/logo.png"
            spacing: "4dp"
            padding: "12dp", 0, 0, "56dp"

        MDNavigationDrawerLabel:
            text: ""    

        DrawerClickableItem:
            icon: "home"
            text: "Inicio"
            source: 'Images/inicio.png'
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inicio"    

        DrawerClickableItem:
            icon: "school"
            text: "Cursos"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Cursos"  

        DrawerClickableItem:
            icon: "medal"
            text: "Emblemas"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Emblemas"  
        
        DrawerClickableItem:
            icon: "star"
            text: "Calificaciones"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Calificaciones"  

        MDNavigationDrawerDivider:

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
